{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "../../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src", "../../../utils/**/*", "../../../types/**/*"],
  "exclude": ["node_modules", "lib"]
}